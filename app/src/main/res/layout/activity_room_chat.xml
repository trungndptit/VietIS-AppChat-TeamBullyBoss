<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RoomChatActivity">

    <androidx.appcompat.widget.Toolbar
        android:padding="0dp"
        android:id="@+id/toolbat_room_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginVertical="10dp"
            android:layout_marginStart="0dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_back_from_room_chat"
                android:background="@drawable/ic_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv_avatar_room_chat"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_avatar"
                android:layout_marginLeft="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/tv_username_room_chat"
                android:text="Cristiano"
                android:textSize="21sp"
                android:textStyle="bold"
                android:textColor="@color/black80"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <View
        android:id="@+id/view_shadow"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/toolbat_room_chat"
        android:background="@drawable/shadow"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_above="@id/bottom_chat"
        android:id="@+id/rv_room_chat_container"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/view_shadow"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/bottom_chat"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_vertical"
                android:background="@drawable/tv_type_background"
                android:layout_weight="6"
                android:paddingVertical="6dp"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <EditText
                    android:id="@+id/et_roomchat_text"
                    android:hint="Type message..."
                    android:background="@null"
                    android:inputType="textMultiLine"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageButton
                    android:id="@+id/ib_send_chat"
                    android:background="@drawable/ic_send"
                    android:layout_width="36dp"
                    android:layout_height="36dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</RelativeLayout>