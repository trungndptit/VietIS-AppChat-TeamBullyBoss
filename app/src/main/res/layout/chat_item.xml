<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_marginLeft="6dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="6dp"
    android:gravity="center_vertical"
    android:layout_height="wrap_content">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:src="@drawable/ic_avatar"
        android:id="@+id/image_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_chat_online"
        app:civ_border_width="10dp"
        app:civ_border_color="@color/onl"
        android:src="@mipmap/ic_launcher"
        android:visibility="gone"
        android:layout_toRightOf="@id/image_avatar"
        android:layout_toEndOf="@id/image_avatar"
        android:layout_marginLeft="-12dp"
        android:layout_marginTop="35dp"
        android:layout_width="15dp"
        android:layout_height="15dp" />


</RelativeLayout>
    <RelativeLayout
        android:layout_marginLeft="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
        android:id="@+id/txt_name"
        android:text="Vũ Hạnh"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_message"
            style="@style/TextTitle"
            android:maxLines="1"
            android:inputType="text"
            android:layout_below="@+id/txt_name"
            android:fontFamily="sans-serif"
            android:text="Yeu bom nhat "
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt_time_seen"
            style="@style/TextTitle"
            android:layout_below="@+id/txt_name"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@+id/text_message"
            android:fontFamily="sans-serif"
            android:text="14:45"
            android:textColor="@color/black"
            android:textSize="15sp" />


    </RelativeLayout>


</LinearLayout>