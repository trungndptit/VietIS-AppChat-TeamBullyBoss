<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/backgroundwelcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:label="@string/app_name"
    tools:context=".entrance.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                style="@style/TextTitle"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="50dp"
                android:text="Welcome!"
                android:textColor="@android:color/white"
                android:textSize="50sp" />


            <TextView
                android:id="@+id/textView2"
                style="@style/TextTitle"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:text="Nice too see you"
                android:textColor="@android:color/white"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="40dp"
            android:layout_weight="3"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_login_email"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_margin="7dp"
                android:background="@drawable/round_conner_login_email_lightblue"
                android:gravity="center"
                android:text="Login  with Email" />

            <include
                android:id="@+id/button_login_gg"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_margin="7dp"
                layout="@layout/custom_button_login_gg" />

            <include
                android:id="@+id/button_login_fb"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_margin="7dp"
                layout="@layout/custom_button_login_facebook" />

        </LinearLayout>


    </LinearLayout>



<TextView
    android:id="@+id/text_sigup"
    android:text="You do not have account? Register!"
    android:textColor="@color/pinkLight"
    android:layout_marginBottom="19dp"
    android:layout_marginLeft="28dp"
    android:textStyle="italic"
    android:textSize="18sp"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

</RelativeLayout>