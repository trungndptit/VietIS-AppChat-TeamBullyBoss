<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="fragmentevent"
            type="com.vietis.bullybosschat.commands.Fragment" />

        <variable
            name="profileviewmodel"
            type="com.vietis.bullybosschat.viewmodel.ProfileActivityViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_background"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:scaleType="centerCrop"
                app:urlBackground="@{profileviewmodel.urlBackground}" />

            <ImageView
                android:id="@+id/image_edit_cover"
                android:layout_width="40dp"
                android:layout_height="32dp"
                android:layout_alignRight="@id/image_background"
                android:layout_alignBottom="@id/image_background"
                android:layout_margin="10dp"
                android:background="@drawable/round_corner_gray_6"
                android:clickable="true"
                android:onClick="@{(v)->fragmentevent.onClickChangeBackground()}"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                android:paddingRight="10dp"
                android:paddingBottom="3dp"
                android:src="@drawable/ic_camera" />

            <ImageView
                android:id="@+id/image_avatar"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="140dp"
                android:padding="3dp"
                android:scaleType="fitCenter"
                app:urlImg="@{profileviewmodel.urlImg}"/>

            <ImageView
                android:id="@+id/image_edit_avatar"
                android:layout_width="40dp"
                android:layout_height="32dp"
                android:layout_alignRight="@id/image_avatar"
                android:layout_alignBottom="@id/image_avatar"
                android:layout_margin="10dp"
                android:background="@drawable/round_corner_gray_6"
                android:clickable="true"
                android:onClick="@{(v)->fragmentevent.onClickChangeImage()}"
                android:padding="6dp"
                android:src="@drawable/ic_camera" />

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_avatar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="@{profileviewmodel.userName}"
                android:textColor="@color/black"
                android:textSize="23sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/layout_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_name"
                android:layout_marginTop="50dp"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:id="@+id/text_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="@{profileviewmodel.numOfFriends}"
                    android:textColor="@color/pinkLight"
                    android:textSize="23sp" />

                <TextView
                    android:id="@+id/text_two"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="@{profileviewmodel.numOfFollows}"
                    android:textColor="@color/pinkLight"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_one"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:id="@+id/text_friend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="Friend"
                    android:textColor="@color/black"
                    android:textSize="23sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_follow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="Follow"
                    android:textColor="@color/black"
                    android:textSize="23sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <ImageView
                android:id="@+id/image_logout"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/logout"
                android:layout_below="@id/layout_one"
                android:layout_alignParentRight="true"
                android:onClick="@{(v)->fragmentevent.onClickLogout()}"
                android:layout_marginTop="90dp"
                android:layout_marginRight="70dp" />

            <TextView
                android:id="@+id/txt_log_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_logout"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="50dp"
                android:text="Đăng xuất"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </ScrollView>
</layout>