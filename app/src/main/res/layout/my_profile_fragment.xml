<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_background"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:scaleType="centerCrop"
        android:src="@drawable/anhbia1"/>

    <ImageView
        android:id="@+id/image_edit_cover"
        android:layout_width="40dp"
        android:layout_height="32dp"
        android:layout_alignRight="@id/image_background"
        android:layout_alignBottom="@id/image_background"
        android:layout_margin="10dp"
        android:background="@drawable/round_corner_gray_6"
        android:clickable="true"
        android:paddingLeft="10dp"
        android:paddingTop="3dp"
        android:paddingRight="10dp"
        android:paddingBottom="3dp"
        android:src="@drawable/ic_camera" />

    <ImageView
        android:id="@+id/image_avatar"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/ic_avatar"
        android:scaleType="fitCenter"
        android:clickable="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:padding="3dp" />

    <ImageView
        android:id="@+id/image_edit_avatar"
        android:layout_width="40dp"
        android:layout_height="32dp"
        android:layout_alignRight="@id/image_avatar"
        android:layout_alignBottom="@id/image_avatar"
        android:layout_margin="10dp"
        android:clickable="true"
        android:background="@drawable/round_corner_gray_6"
        android:padding="6dp"
        android:src="@drawable/ic_camera" />

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_avatar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Kim Cho"
            android:textColor="@color/black"
            android:textSize="23sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/layout_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_name"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/text_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="22"
                android:textColor="@color/pinkLight"
                android:textSize="23sp" />


            <TextView
                android:id="@+id/text_two"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="99+"
                android:textColor="@color/pinkLight"
                android:textSize="22sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_one"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/text_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Friend"
                android:textColor="@color/black"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Follow"
                android:textColor="@color/black"
                android:textSize="23sp"
                android:textStyle="bold" />

        </LinearLayout>


        <ImageView
            android:id="@+id/image_logout"
            android:layout_below="@id/layout_one"
            tools:src="@drawable/logout"
            android:layout_marginTop="90dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="70dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:id="@+id/txt_log_out"
            android:text="Đăng xuất"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_alignParentBottom="true"
            android:textColor="@color/black"
            android:layout_below="@id/image_logout"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</ScrollView>