<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_add_users"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_avatar"
            android:background="@drawable/ic_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_marginLeft="30dp"
            android:text="Chat"
            android:textColor="@color/gray80"
            android:textStyle="bold"
            android:textSize="21sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/ll_search_online_list"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_search"
        android:layout_below="@id/toolbar_add_users"
        android:layout_marginHorizontal="20dp"
        android:gravity="center_vertical"
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="33dp">

        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_search_add_user"
                android:layout_marginTop="2dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/ic_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:layout_weight="9"
            android:hint="Search..."
            android:textSize="15sp"
            android:textColor="@color/black80"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="15dp"
        android:id="@+id/rv_whom_chat"
        android:layout_below="@id/ll_search_online_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>