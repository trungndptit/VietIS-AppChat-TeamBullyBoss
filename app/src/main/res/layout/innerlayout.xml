<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="UserBinding">

        <variable
            name="onlineUser"
            type="com.vietis.bullybosschat.viewmodel.RowUserViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/member_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:urlImg="@{onlineUser.urlImg}" />

        <TextView
            android:id="@+id/member_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/member_image"
            android:layout_toRightOf="@+id/member_image"
            android:text="@{onlineUser.username}"
            android:textSize="20sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/member_status_on"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@+id/member_name"
            android:layout_marginLeft="-10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/member_image"
            android:layout_toRightOf="@+id/member_image"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="#12ff38"
            app:civ_border_width="10dp" />
    </RelativeLayout>
</layout>