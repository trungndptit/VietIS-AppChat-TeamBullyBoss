<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--<androidx.appcompat.widget.Toolbar-->
        <!--android:id="@+id/main_toolbar"-->
        <!--android:layout_width="match_parent"-->
        <!--app:title="Online Friends"-->
        <!--android:layout_height="?attr/actionBarSize"></androidx.appcompat.widget.Toolbar>-->

    <include
        android:id="@+id/choose_friend_toolbar"
        layout="@layout/online_friend_toolbar" />
    <!--<View-->
        <!--android:id="@+id/view_main"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_marginTop="50dp"-->
        <!--android:layout_height="2dp" />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/choose_friend_toolbar"
        android:layout_marginTop="2dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_search_online_list"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_search"
            android:layout_below="@id/toolbar_add_users"
            android:layout_marginHorizontal="20dp"
            android:gravity="center_vertical"
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="33dp">

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_search_add_user"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/ic_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <EditText
                android:background="@null"
                android:id="@+id/text_search"
                android:layout_weight="9"
                android:hint="Search"
                android:textSize="15sp"
                android:textColor="@color/black80"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_friend_online"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="3dp"
            android:layout_margin="6dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</RelativeLayout>